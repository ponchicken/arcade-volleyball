{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
      "./node_modules/@types/matter-js",
      "./node_modules/phaser/types"
    ],
    "types": [
      "phaser"
    ]
  }
}